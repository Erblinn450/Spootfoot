{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"]
  },
  "include": ["app/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
